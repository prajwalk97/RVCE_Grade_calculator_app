<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="423dp"
        android:layout_height="56dp"
        android:layout_marginTop="116dp"
        android:background="#EDE7E7"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/heading"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CIE_SCORE"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:layout_marginTop="122dp"
        android:foregroundTint="#FFFFFF"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/CIE_Score"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/heading"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/CIE"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:layout_marginTop="122dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColor="#ACA0A0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/heading"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/SEE_SCORE"
        android:layout_width="166dp"
        android:layout_height="45dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="61dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/SEE_SCORE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/SEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/SEE"
        android:layout_width="103dp"
        android:layout_height="51dp"
        android:layout_marginTop="165dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/grade"
        android:layout_width="141dp"
        android:layout_height="59dp"
        android:onClick="setGrade"
        android:text="@string/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.229"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintVertical_bias="0.598" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="126dp"
        android:layout_height="48dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="205dp"
        android:text="@string/result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/grade"
        app:layout_constraintTop_toBottomOf="@+id/SEE" />

</androidx.constraintlayout.widget.ConstraintLayout>